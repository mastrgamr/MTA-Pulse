<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:layout_margin="5dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Route"
        android:id="@+id/route_text"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Live Time"
        android:id="@+id/live_time_text"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/route_text"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Static Time"
        android:id="@+id/static_time_text"
        android:visibility="invisible"
        android:layout_alignTop="@+id/live_time_text"
        android:layout_alignLeft="@+id/dest_text"
        android:layout_alignStart="@+id/dest_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Destination"
        android:id="@+id/dest_text"
        android:layout_below="@+id/route_text"
        android:layout_centerHorizontal="true" />

</RelativeLayout>